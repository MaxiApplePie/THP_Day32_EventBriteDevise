<div class="jumbotron-fluid text-center jumbo jumbo-create-event">
  <h1 class="display-3 mt-5">Modifier un évènement</h1>
</div>
<div class="container mt-5 mb-5" style="width: 30rem;">
     <%= form_for @event, class: "form-signin mt-5" do |f| %>

    <div class="mt-4">
      <h5><%= label_tag 'Titre'%></h5>
      <%= f.text_field :title, require: true, class: "form-control"%>
    </div>
    
    <div class="mt-4">
      <h5><%= label_tag 'Description' %></h5>
      <%= f.text_area :description, require: true, class: "form-control"%>
    </div>
    
    <div class="row mt-4">
      <div class="col-md-7">
        <h5><%= label_tag 'Date de début' %></h5>
        <%= f.date_field :start_date, require: true, class: "form-control"%>
      </div>

      <div class="col-md-5">
        <h5><%= label_tag 'Durée en minutes' %></h5>
        <%= f.text_field :duration, require: true, class: "form-control"%>
      </div>
    </div>
    

    <div class="row mt-4">
      <div class="col-md-6">
        <h5><%= label_tag 'Lieu' %></h5>
        <%= f.text_field :location, require: true, class: "form-control"%>
      </div>

      <div class="col-md-6">
        <h5><%= label_tag 'Prix' %></h5>
        <%= f.text_field :price, require: true, class: "form-control"%>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-6">
        <%= submit_tag "Modifier", class: "btn btn-primary mt-1"%>
         <%=button_to "Retour", events_path, method: 'get', class: "btn btn-primary mt-1"%>
      </div>
      <div class="col-md-6">
      </div>
    </div>
    
  <%end%>

    <div class="mt-4">
      <h5>Changer d'image ?</h5>
      <%= form_tag(event_img_event_path(@event), method: :patch, multipart: true) do %>
        <%= file_field_tag :img_event %>
        <%= submit_tag "mettre à jour" %>
      <% end %>
    </div>    

      <div class="row mt-4">
        <%if @event.img_event.attached?%>
          <%= image_tag @event.img_event, alt: 'photo' %>
        <% else %>
          <img src="https://images.pexels.com/photos/2608517/pexels-photo-2608517.jpeg?cs=srgb&dl=pexels-matheus-bertelli-2608517.jpg&fm=jpg", alt: 'photo' class="img">
        <%end%>
    </div>
</div>