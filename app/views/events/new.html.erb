<div class="jumbotron-fluid text-center jumbo jumbo-create-event">
  <h1 class="display-3 mt-5">Créer un évènement</h1>
</div>
<div class="container mt-5 mb-5" style="width: 30rem;">
     <%=form_with model: @event, local: true ,class: "form-signin mt-5" do |f|%>

    <div class="mt-4">
      <h5><%= label_tag 'Titre'%></h5>
      <%= text_field_tag 'title','', require: true, class: "form-control"%>
    </div>
    
    <div class="mt-4">
      <h5><%= label_tag 'Description' %></h5>
      <%= text_area_tag 'description','', require: true, class: "form-control"%>
    </div>
    
    <div class="row mt-4">
    <div class="col-md-7">
      <h5><%= label_tag 'Date de début' %></h5>
      <%= date_field_tag 'start_date','', require: true, class: "form-control"%>
    </div>

    <div class="col-md-5">
      <h5><%= label_tag 'Durée en minutes' %></h5>
      <%= text_field_tag 'duration','', require: true, class: "form-control"%>
    </div>
    </div>
    

    <div class="row mt-4">
    <div class="col-md-6">
      <h5><%= label_tag 'Lieu' %></h5>
      <%= text_field_tag 'location','', require: true, class: "form-control"%>
    </div>

    <div class="col-md-6">
      <h5><%= label_tag 'Prix' %></h5>
      <%= text_field_tag 'price','', require: true, class: "form-control"%>
    </div>
    </div>

    <div class="mt-4">
      <h5><%= label_tag 'Image' %></h5>
        <%= f.file_field :img_event, class:'form-control' %>
    </div>
    
    <%= submit_tag "Créer", class: "btn btn-primary mt-4"%>
    
  <%end%>
</div>